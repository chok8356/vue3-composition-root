{
  "name": "vue3-composition-root",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.5.0",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint:code": "eslint . --ext .js,.ts,.jsx,.tsx,.cjs,.mjs,.cts,.mts,.vue --fix --ignore-path .gitignore",
    "lint:style": "stylelint \"**/*.{vue,css}\" --fix --ignore-path .gitignore",
    "format": "prettier --write src/ --ignore-path .gitignore"
  },
  "dependencies": {
    "vue": "^3.4.31",
    "vue-router": "^4.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.1",
    "@rushstack/eslint-patch": "^1.10.3",
    "@tsconfig/node20": "^20.1.4",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.14.10",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vitest/coverage-v8": "^2.0.2",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "axios": "^1.7.2",
    "eslint": "^8.57.0",
    "eslint-plugin-perfectionist": "^2.11.0",
    "eslint-plugin-playwright": "^1.6.2",
    "eslint-plugin-vue": "^9.27.0",
    "jsdom": "^24.1.0",
    "npm-run-all2": "^6.2.2",
    "postcss-html": "^1.7.0",
    "prettier": "^3.3.3",
    "stylelint": "^16.7.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-order": "^6.0.4",
    "typescript": "~5.5.3",
    "vite": "^5.3.3",
    "vite-plugin-vue-devtools": "^7.3.5",
    "vitest": "^2.0.2",
    "vue-tsc": "^2.0.26"
  }
}
